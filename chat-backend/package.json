{
  "name": "sam-groups",
  "version": "1.0.0",
  "description": "Groups chat managed with AWS SAM",
  "author": "AdrKacz",
  "scripts": {
    "lint": "nx exec -- eslint . --fix",
    "build": "nx exec -- sam build",
    "deploy:skip-ci": "yarn build && sam deploy --config-env",
    "deploy:force": "yarn ci:all && yarn build && yarn predeploy && sam deploy --no-confirm-changeset --config-env",
    "deploy:skip-ci:force": "yarn build && sam deploy --no-confirm-changeset --config-env",
    "test": "nx exec -- jest",
    "test:silent": "nx exec -- jest --silent",
    "ci:all": "bash ./scripts/npm-multiple-folders.sh package-lock.json ci",
    "install:all": "bash ./scripts/npm-multiple-folders.sh package.json install",
    "upgrade:all": "bash ./scripts/npm-multiple-folders.sh package.json upgrade",
    "local:api": "sam local start-api -t ./template.yaml --warm-containers LAZY --debug --config-env"
  },
  "devDependencies": {
    "@aws-sdk/client-apigatewaymanagementapi": "^3.194.0",
    "@aws-sdk/client-s3": "^3.276.0",
    "@aws-sdk/client-sns": "^3.112.0",
    "@aws-sdk/lib-dynamodb": "^3.215.0",
    "@aws-sdk/util-stream-node": "^3.272.0",
    "aws-sdk-client-mock": "^1.0.0",
    "axios": "^1.1.3",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "firebase-admin": "^11.2.0",
    "jest": "^28.1.1",
    "nx": "15.7.2",
    "@nrwl/nx-cloud": "latest"
  },
  "license": "SEE LICENSE IN /LICENSE",
  "nx": {
    "targets": {
      "build": {
        "outputs": [
          "{projectRoot}/.aws-sam"
        ]
      },
      "test": {
        "outputs": [
          "{projectRoot}/.coverage"
        ]
      },
      "test:silent": {
        "outputs": [
          "{projectRoot}/.coverage"
        ]
      }
    }
  }
}
